<H1>New Pet</h1>

<%= render 'form', pet: @pet %>

<%= link_to 'Back', pet_path %>



<%= simple_form_for(@pet) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :price %>
  <%= f.input :availability %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
