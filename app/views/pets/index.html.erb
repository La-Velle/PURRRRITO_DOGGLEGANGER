<center><h1>Some of our pets <i class="fas fa-heart"></i></h1></center>
<br>
  <% @pets.each do |pet| %>
    <div class="flex-container">
      <div class="row justify content left">
        <div class="card-pet"><img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" width=120px>
          <div class="card-product-infos">
            <div class="card-pet-text">
              <h2><%= link_to pet.name, pets_path(pet) %></h2>
              <p>Hi! My name is <%= pet.name %></p>
              <p>I love to be <%= pet.description %></p>
              <p>Spend some time with <%= pet.name %> for Â£<%= pet.price %> a day!</p>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
