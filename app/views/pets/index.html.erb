<div class="container">
    <h1> All Pets </h1>
    <% @pet.each do |pet| %>
      <div class="row justify-content-left">

        <div class="col-12 col-lg-6">
          <h2><%= link_to pet.name, pets_path(pet) %></h2>
            <div class="card-pet" >
             <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <div class="card-product-infos">

              <div class="card-pet-details">
                    <div class="card-pet-text">
                    <p>This lovely pet is a <%= pet.name %></p>
                    <p>This Pet is  <%= pet.description %></p>
                      <div class="card-pet-infos">
                        <p>Spend some time with <%= pet.name %> the price is <%= pet.price %> Â£</p>
                      </div>

                    </div>
             </div>

            </div>

          </div>
      </div>
    <% end %>
</div>

<div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
