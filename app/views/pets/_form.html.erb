<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="p-5 mt-5 rounded justify-content-center">
        <%= simple_form_for @pet, html: { class: "form-new"} do |f| %>
          <%= f.input :name, :input_html => { :class => 'foo' }%>
          <%= f.input :description %>
          <%= f.input :location, input_html: { data: { geocoder_target: "address" } }, wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
          <%= f.input :price, input_html: { min: 0, step: 'any' } %>
          <%= f.input :category, collection: ["Cat", "Dog", "Exotic"], as: :select %>
          <%= f.input :image_url %>
          <%= f.input :availability %>
          <%= f.submit %>
        <% end %>
       <%= link_to 'back', pets_path, class: "btn btn-primary" %>
     </div>
    </div>
  </div>
</div>
