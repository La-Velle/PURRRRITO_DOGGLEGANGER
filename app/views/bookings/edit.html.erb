<div class="container">
  <div class="form-wrapper" style="width: 300px; margin: 0 auto;">
    <h3><%= @pet.name %></h3>

    <%= simple_form_for [@pet, @booking], data: { unavailable_dates: @pet.unavailable_dates.to_json }, html:{id: :edit_booking} do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Book This Pet!", class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
